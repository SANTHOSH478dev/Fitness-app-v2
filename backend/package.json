{
  "name": "mern-fitness-app",
  "version": "1.0.0",
  "description": "Full MERN Fitness App for Render",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "cd client && npm start",
